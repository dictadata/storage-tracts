{
  "realm": "",
  "name": "transform.tract",
  "type": "tract",
  "actions": [
    {
      "name": "transform_forecast",
      "action": "transfer",
      "origin": {
        "smt": "rest|https://api.weather.gov/gridpoints/DVN/34,71/|forecast|=*",
        "options": {
          "http": {
            "headers": {
              "Accept": "application/ld+json",
              "User-Agent": "@dictadata.net/storage-node (info@dictadata.net)"
            }
          },
          "retries": 1,
          "pick": "periods",
          "encoding": "./test/data/input/engrams/weather_forecast.engram.json"
        }
      },
      "transforms": [
        {
          "transform": "mutate",
          "select": [
            "name",
            "temperature",
            "temperatureUnit",
            "windSpeed",
            "windDirection",
            "shortForecast"
          ]
        }
      ],
      "terminal": {
        "smt": "json|./test/data/output/rest/|transform.json|*",
        "output": "./test/data/output/rest/transform.json",
        "compareValues": 1
      }
    }
  ]
}
