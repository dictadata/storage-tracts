{
  "scan": {
    "action": "scan",
    "origin": {
      "smt": "json|./test/data/input/|foofile*.json|*",
      "options": {
        "recursive": false
      }
    },
    "tracts": [
      {
        "name": "schema",
        "action": "codify",
        "origin": {
          "smt": "json|./test/data/input/|${name}|*",
          "options": {
            "encoding": "./test/data/output/fs/scan.encoding.json",
            "max_read": 100
          }
        },
        "terminal": {
          "output": "./test/data/output/fs/scan.encoding.json"
        }
      }
    ]
  }
}
