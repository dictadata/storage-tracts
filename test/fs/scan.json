{
  "scan": {
    "action": "scan",
    "origin": {
      "smt": "json|./data/input/|foofile*.json|*",
      "options": {
        "recursive": false
      }
    },
    "schema": {
      "action": "codify",
      "origin": {
        "smt": "json|./data/input/|${name}|*",
        "options": {
          "encoding": "./data/output/fs/scan.encoding.json",
          "max_read": 100
        }
      },
      "terminal": {
        "output": "./data/output/fs/scan.encoding.json"
      }
    }
  }
}
