{
  "realm": "",
  "name": "scan.tract",
  "type": "tract",
  "actions": [
    {
      "name": "scan",
      "action": "scan",
      "origin": {
        "smt": "json|./test/data/input/|foofile*.json|*",
        "options": {
          "recursive": false
        }
      },
      "actions": [
        {
          "name": "files",
          "action": "transfer",
          "origin": {
            "smt": "json|./test/data/input/|${name}|*"
          },
          "terminal": {
            "smt": "json|./test/data/output/fs/scan/|${name}|*"
          }
        },
        {
          "name": "schema",
          "action": "codify",
          "encoding": "./test/data/output/fs/scan.engram.json",
          "origin": {
            "smt": "json|./test/data/input/|${name}|*",
            "options": {
              "max_read": 100
            }
          },
          "terminal": {
            "output": "./test/data/output/fs/scan.engram.json"
          }
        }
      ]
    }
  ]
}
