{
  "scan": {
    "action": "scan",
    "origin": {
      "smt": "json|zip:./test/data/input/foofile.zip|foofile*.json|*",
      "options": {
        "recursive": true
      }
    },
    "tracts": [
      {
        "name": "schema",
        "action": "codify",
        "origin": {
          "smt": "json|zip:./test/data/input/foofile.zip|${name}|*",
          "options": {
            "encoding": "./test/data/output/zip/scan.encoding.json",
            "max_read": 100
          }
        },
        "terminal": {
          "output": "./test/data/output/zip/scan.encoding.json"
        }
      }
    ]
  }
}
