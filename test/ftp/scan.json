{
  "scan": {
    "action": "scan",
    "origin": {
      "smt": "json|ftp://dev.dictadata.net/dictadata/test/data/input/|foofile_*.json|*",
      "options": {
        "recursive": false
      }
    },
    "actions": [
      {
        "name": "schema",
        "action": "codify",
        "origin": {
          "smt": "json|ftp://dev.dictadata.net/dictadata/test/data/input/|${name}|*",
          "options": {
            "encoding": "./test/data/output/ftp/scan.engram.json",
            "max_read": 100
          }
        },
        "terminal": {
          "output": "./test/data/output/ftp/scan.engram.json"
        }
      }
    ]
  }
}
